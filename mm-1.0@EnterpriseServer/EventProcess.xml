<?xml version="1.0" encoding="UTF-8"?>
<application guid="MM" version="1.0">
  <display categories="User Processes" name="mm"/>
  <creation authors="eStudio" date="28-10-2021 12:39:57" lastModifiedDate="28-10-2021 12:39:57"/>
  <deployment label="Development"/>
  <service-instances>
    <inst name="FTPGet1">
      <service guid="FTPGet" version="4.0"/>
      <short-description>The FTPGet service is used to download file from the FTPServer</short-description>
      <long-description>The FTPGet service is used to download file from the FTPServer</long-description>
      <deployment nodes="fps"/>
      <execution>
        <debug enabled="false" port="5000"/>
        <launch type="1"/>
        <connection-factory-properties/>
        <timevalue timevalue="0"/>
      </execution>
      <inputport-instances>
        <inputport-instance name="IN_PORT">
          <description>Takes message which contains information about data and files</description>
          <jms>
            <destination/>
            <authentication/>
            <subscriber>
              <transaction enabled="false"/>
              <subscription durable="false"/>
            </subscriber>
          </jms>
        </inputport-instance>
      </inputport-instances>
      <outputport-instances>
        <outputport-instance name="OUT_PORT">
          <description>sends the result of the file download along with information related to file transfer</description>
          <jms>
            <destination/>
            <authentication/>
            <publisher>
              <messages persistent="true"/>
            </publisher>
          </jms>
        </outputport-instance>
        <outputport-instance name="ON_EXCEPTION">
          <description>Used as an Exception Port</description>
          <workflow type="1"/>
          <schema root="{http://www.fiorano.com/fesb/activity/fault}Error">
            <file>ON_EXCEPTION.xsd</file>
          </schema>
          <jms>
            <destination/>
            <authentication/>
            <publisher>
              <messages persistent="true"/>
            </publisher>
          </jms>
        </outputport-instance>
      </outputport-instances>
      <logmanager logger="java.util.logging.FileHandler">
        <Param name="java.util.logging.FileHandler.limit">1000000</Param>
        <Param name="java.util.logging.FileHandler.dir">logs</Param>
        <Param name="java.util.logging.FileHandler.count">4</Param>
        <Param name="fiorano.jms.log2.def.DefaultFormatter.includetimestamp">true</Param>
        <Param name="fiorano.jms.log2.def.DefaultFormatter.dateformat">MM/dd/yyyy HH:mm:ss</Param>
      </logmanager>
      <logmodules>
        <logmodule level="OFF" name="com.fiorano.services.customencryption" uniqueNameRequired="true"/>
        <logmodule level="INFO" name="OUT_HANDLER" uniqueNameRequired="true"/>
        <logmodule level="SEVERE" name="com.fiorano.bc.trgateway" uniqueNameRequired="true"/>
        <logmodule level="SEVERE" name="WarningLogger" uniqueNameRequired="true"/>
        <logmodule level="SEVERE" name="ERR_HANDLER" uniqueNameRequired="true"/>
        <logmodule level="SEVERE" name="com.fiorano.adapter.jca.ftp.cci.FTPInteraction" uniqueNameRequired="true"/>
        <logmodule level="SEVERE" name="com.fiorano.adapter.jca.ftp.spi.outbound.FTPManagedConnectionFactory" uniqueNameRequired="true"/>
        <logmodule level="SEVERE" name="fiorano.esb.adapter.jca.dii.ftpget.monitor" uniqueNameRequired="true"/>
      </logmodules>
      <runtime-arguments>
        <runtime-argument inmemory="false" mandatory="false" name="JVM_PARAMS" type="java.lang.String">
          <value> -client -DLOG_TO_STREAM=true -Xrs -XX:MetaspaceSize=128m -XX:MaxMetaspaceSize=256m</value>
        </runtime-argument>
        <runtime-argument inmemory="true" mandatory="true" name="javax.resource.cci.InteractionSpec" type="java.lang.String">
          <value>com.fiorano.adapter.jca.ftp.cci.get.FTPGetInteractionSpec</value>
        </runtime-argument>
        <runtime-argument inmemory="false" mandatory="false" name="JAVA_HOME"/>
      </runtime-arguments>
    </inst>
    <inst name="Display1">
      <service guid="Display" version="4.0"/>
      <short-description>Component for Displaying documents</short-description>
      <deployment nodes="fps"/>
      <execution>
        <debug enabled="false" port="5000"/>
        <launch type="1"/>
        <connection-factory-properties/>
        <timevalue timevalue="0"/>
      </execution>
      <inputport-instances>
        <inputport-instance name="IN_PORT">
          <description>Receives all incoming messages to display them in a user friendly format</description>
          <jms>
            <destination/>
            <authentication/>
            <subscriber>
              <transaction enabled="false"/>
              <subscription durable="false"/>
            </subscriber>
          </jms>
        </inputport-instance>
      </inputport-instances>
      <outputport-instances>
        <outputport-instance name="OUT_PORT">
          <description>Sends the document received at input port to the next business component in the workflow</description>
          <jms>
            <destination/>
            <authentication/>
            <publisher>
              <messages persistent="true"/>
            </publisher>
          </jms>
        </outputport-instance>
        <outputport-instance name="ON_EXCEPTION">
          <description>Used as an Exception Port</description>
          <workflow type="1"/>
          <schema root="{http://www.fiorano.com/fesb/activity/fault}Error">
            <file>ON_EXCEPTION.xsd</file>
          </schema>
          <jms>
            <destination/>
            <authentication/>
            <publisher>
              <messages persistent="true"/>
            </publisher>
          </jms>
        </outputport-instance>
      </outputport-instances>
      <logmanager logger="java.util.logging.FileHandler">
        <Param name="java.util.logging.FileHandler.limit">1000000</Param>
        <Param name="java.util.logging.FileHandler.dir">logs</Param>
        <Param name="java.util.logging.FileHandler.count">4</Param>
        <Param name="fiorano.jms.log2.def.DefaultFormatter.includetimestamp">true</Param>
        <Param name="fiorano.jms.log2.def.DefaultFormatter.dateformat">MM/dd/yyyy HH:mm:ss</Param>
      </logmanager>
      <logmodules>
        <logmodule level="WARNING" name="com.fiorano.services.display.DisplayService" uniqueNameRequired="true"/>
        <logmodule level="WARNING" name="com.fiorano.services.display.transport.jms" uniqueNameRequired="true"/>
        <logmodule level="WARNING" name="com.fiorano.services.display.engine" uniqueNameRequired="true"/>
        <logmodule level="SEVERE" name="ERR_HANDLER" uniqueNameRequired="true"/>
        <logmodule level="INFO" name="OUT_HANDLER" uniqueNameRequired="true"/>
      </logmodules>
      <runtime-arguments>
        <runtime-argument inmemory="false" mandatory="false" name="JVM_PARAMS" type="java.lang.String">
          <value> -client -DLOG_TO_STREAM=true -Xrs -XX:MetaspaceSize=128m -XX:MaxMetaspaceSize=256m</value>
        </runtime-argument>
        <runtime-argument inmemory="false" mandatory="false" name="JAVA_HOME"/>
      </runtime-arguments>
    </inst>
  </service-instances>
  <routes>
    <route name="route1">
      <source inst="FTPGet1" port="OUT_PORT"/>
      <target inst="Display1" port="IN_PORT"/>
      <messages/>
    </route>
  </routes>
  <durableRoute/>
</application>